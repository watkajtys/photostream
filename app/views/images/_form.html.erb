<%= form_for @image do|f| %>
<div class='error'>
   <%= flash[:error] %>
</div>
<p>
   <%= f.label :title, "Enter Title" %>
   <%= @image.errors[:title].join(',') %>
   <%= f.text_field :title %>
</p>
<p>
   <%= f.label :remote_image_url, "Enter Image URL from web" %>
   <%= @image.errors[:remote_image_url].join(',') %>
   <%= f.text_field :remote_image_url %>
</p>
<p>
   <%= f.label :author, "Enter Original Author" %>
   <%= f.text_field :author  %>
</p>
<p>
   <%= f.submit "Save" %>
</p>
<% end %>